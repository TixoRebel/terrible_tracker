<Window x:Class="EyeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Canvas Height="800" Width="1200">
        <Canvas.Background>
            <ImageBrush x:Name="backgroundImage" AlignmentX="Center"  AlignmentY="Center"/>
        </Canvas.Background>
        <Image x:Name="whiteImage" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Image x:Name="leftImgae"/>
        <Image x:Name="rightImage"/>
        <Image x:Name="faceImage" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Canvas>
</Window>
